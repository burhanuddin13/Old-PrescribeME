<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientInfo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        android:id="@+id/pat_info_header"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Patient Info"
            android:textColor="@color/border_color"
            android:textSize="36sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtPrescriptionNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescription #"
            android:textColor="@color/border_color"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pat1nameLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="64sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pat_info_header">

        <EditText
            android:id="@+id/Pat1Name"
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="Enter Patient's First Name"
            android:inputType="textPersonName"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:textColorHint="@color/border_color" />

        <ImageButton
            android:id="@+id/mic_pat1name"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            app:srcCompat="@drawable/ic_mic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/patLnameLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pat1nameLL">

        <EditText
            android:id="@+id/PatLName"
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="Enter Patient's Last Name"
            android:inputType="textPersonName"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:textColorHint="@color/border_color" />

        <ImageButton
            android:id="@+id/mic_patlname"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            app:srcCompat="@drawable/ic_mic"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/patAgeLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patLnameLL">

        <EditText
            android:id="@+id/PatAge"
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="Enter Patient's Age"
            android:inputType="number"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:textColorHint="@color/border_color" />

        <ImageButton
            android:id="@+id/mic_patage"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            app:srcCompat="@drawable/ic_mic"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/patGenderLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patAgeLL">

        <EditText
            android:id="@+id/PatGender"
            android:layout_width="310sp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10sp"
            android:ems="10"
            android:hint="Enter Patient's Gender"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:textColorHint="@color/border_color" />

        <ImageButton
            android:id="@+id/mic_patgender"
            android:layout_width="30sp"
            android:layout_height="40sp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            app:srcCompat="@drawable/ic_mic"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="Proceed to Prescription"
        app:backgroundTint="@color/border_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/patGenderLL"
        app:layout_constraintStart_toStartOf="@+id/patGenderLL"
        app:layout_constraintTop_toBottomOf="@+id/patGenderLL" />

</androidx.constraintlayout.widget.ConstraintLayout>