<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmProfile">

    <TextView
        android:id="@+id/Conf_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Confirm Information"
        android:textColor="@color/border_color"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/Doctor_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="32sp"
        android:text="Doctor Profile"
        android:textColor="@color/border_color"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Conf_Header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DocNameLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Doctor_Info">

        <TextView
            android:id="@+id/txtdocname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Name: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewdocname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DocQualifLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DocNameLL">

        <TextView
            android:id="@+id/txtdocqualif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Qualifications: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewdocqualif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DocRegNoLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DocQualifLL">

        <TextView
            android:id="@+id/txtdocregno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Registration No: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewdocregno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DocClinicLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DocRegNoLL">

        <TextView
            android:id="@+id/txtdocclinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Clinic/Hospitals: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewdocclinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Patient_Info"
        android:text="Patient Profile"
        android:textColor="@color/border_color"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DocClinicLL"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PatNameLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Patient_Info">

        <TextView
            android:id="@+id/txtpatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Name: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewpatname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PatAgeLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatNameLL">

        <TextView
            android:id="@+id/txtpatage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Age: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewpatage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PatGenderLL"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatAgeLL">

        <TextView
            android:id="@+id/txtpatgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="Gender: "
            android:textSize="20sp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewpatgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:ems="6"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/border_color"
            android:text="No Value Found"
            android:fontFamily="@font/berkshire_swash"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnHTML"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="8sp"
        android:background="@drawable/round_button"
        android:text="View HTML"
        android:drawableLeft="@drawable/ic_code"
        app:backgroundTint="@color/border_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintEnd_toStartOf="@+id/btnPDF"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/PatGenderLL"
        app:layout_constraintTop_toBottomOf="@+id/PatGenderLL" />

    <Button
        android:id="@+id/btnPDF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="32sp"
        android:background="@drawable/round_button"
        android:text="View PDF"
        android:drawableLeft="@drawable/ic_pdf"
        app:backgroundTint="@color/border_color"
        app:layout_constraintBottom_toBottomOf="@+id/btnHTML"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnHTML"
        app:layout_constraintTop_toTopOf="@+id/btnHTML"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Share PDF"
        android:drawableLeft="@drawable/ic_share"
        app:backgroundTint="@color/border_color"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHTML"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Go Home | Restart"
        app:backgroundTint="@color/border_color"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShare"/>

    <TextView
        android:id="@+id/txtBackWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/restart_presc_warn"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"/>

    <TextView
        android:id="@+id/txtSignatureURL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:visibility="visible"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginStart="32sp"
        android:layout_marginLeft="32sp"
        android:layout_marginEnd="32sp"
        android:layout_marginRight="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBackWarning"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>